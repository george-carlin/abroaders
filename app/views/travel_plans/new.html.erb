<% provide(:title, "Create New Travel Plan") %>

<h1>Create New Travel Plan</h1>

<%= form_for @travel_plan do |f| %>

  <% if false %>
    if (this.props.showAddBtn || this.props.showRemoveBtn) {
      formGroupClass = "col-xs-12 col-sm-5 form-group";
    } else {
      formGroupClass = "col-xs-12 col-sm-6 form-group";
    }
  <% end %>

  <div class="row">
    <div class="col-xs-12">
      <% %i[ single return multi].each do |type| %>
        <% label = type == :multi ? "Multi-City" : type.to_s.capitalize %>
        <label for=<%= "travel_plan_type_#{type}" %>>
          <%= label %>
          &nbsp;
          <%= radio_button_tag(
                :travel_plan_type,
                type,
                type == TravelPlan::DEFAULT_TYPE
              ) %>
        </label>
      <% end %>
    </div>
  </div><!-- .row -->

  <%= f.fields_for :legs do |leg_fields| %>
    <div class="row">
      <div
        class="col-xs-12 col-sm-5 form-group travel-plan-destination-form-group"
      >
        <%= leg_fields.label :from %>
        <%= leg_fields.text_field :from, class: "destination-typeahead" %>
        <div id="from-loading-spinner" class="loading-spinner">Loading...</div>
        <%= leg_fields.hidden_field :from_id %>
        <!--
          <input id="travel_plan_origin_lookup" type="text"
          autoComplete="off" class="form-control" /> -->
      </div>

      <div
        class="col-xs-12 col-sm-5 form-group travel-plan-destination-form-group"
      >
        <%= leg_fields.label :to %>
        <%= leg_fields.text_field :to, class: "destination-typeahead" %>
        <div id="to-loading-spinner" class="loading-spinner">Loading...</div>
        <%= leg_fields.hidden_field :to_id %>
        <!--
          <input id="travel_plan_origin_lookup" type="text"
          autoComplete="off" class="form-control" /> -->
      </div>

      <div class="col-xs-12 col-sm-2">
        <button class="add-travel-plan-leg-btn btn btn-primary">+</button>
        <button class="remove-travel-plan-leg-btn btn btn-default">-</button>
      </div><!-- .col-xs-12.col-sm-1 -->
    </div><!-- .row -->

    <div class="row">
      <div class="col-xs-4">
        <label>No of passengers</label>
        <input type="number" class="form-control" />
      </div>
    </div>

  <% end # fields_for %>

<% end %>
