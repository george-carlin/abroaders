<% provide(:title, "Create New Travel Plan") %>

<h1>Create New Travel Plan</h1>

<%= form_for @travel_plan do |f| %>

  <% if false %>
    if (this.props.showAddBtn || this.props.showRemoveBtn) {
      formGroupClass = "col-xs-12 col-sm-5 form-group";
    } else {
      formGroupClass = "col-xs-12 col-sm-6 form-group";
    }
  <% end %>

    <div class="row">
      <div class="col-xs-12">
        <% TravelPlan::TYPES.each do |type| %>
          <% label = type == :multi ? "Multi-City" : type.to_s.capitalize %>
          <label for=<%= "travel_plan_type_#{type}" %>>
            <%= label %>
            &nbsp;
            <%= radio_button_tag(
                  :travel_plan_type,
                  type,
                  type == TravelPlan::DEFAULT_TYPE
                ) %>
          </label>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class={formGroupClass}>
        <%= f.label :from, "From:" %>
        <%= f.text_field :from %>
        <!--
          <input id="travel_plan_origin_lookup" type="text"
          autoComplete="off" class="form-control" /> -->
      </div>

      <div class={formGroupClass}>
        <%= f.label :to, "To:" %>
        <%= f.text_field :to %>
        <!--
          <input id="travel_plan_origin_lookup" type="text"
          autoComplete="off" class="form-control" /> -->
      </div>

      <div class="col-xs-12 col-sm-2">
        <button class="add-travel-plan-leg-btn btn btn-primary">+</button>
        <button class="remove-travel-plan-leg-btn btn btn-default">-</button>
      </div><!-- .col-xs-12.col-sm-1 -->
    </div><!-- .row -->

    <% if false %>

    <div class="row">
      <% 2.times do %>
        <div class={this.props.colClasses} style={style}>
          <div id="travel_plan_daterange_select"
                class="input-daterange input-group">
            <span class="input-group-addon">Between</span>
            <input type="text" class="form-control" name="start" />
            <span class="input-group-addon">and</span>
            <input type="text" class="form-control" name="end" />
          </div>
        </div>
      <% end %>
    </div><!-- .row -->

    <div class="row">
      <div class="col-xs-4">
        <label>No of passengers</label>
        <input type="number" class="form-control" />
      </div>
    </div>

    <% end %>

<% end %>
