<nav id="main_navbar"
  class="<%= "admin-navbar" if admin_page? %> navbar navbar-default"
>
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">
        Abroaders&nbsp
        <% if admin_page? %>
          <small>(Admin Panel)</small>
        <% end %>
      </a>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if current_account || current_admin %>
          <li><%= link_to "Dashboard", root_path %></li>
          <% if current_admin %>
            <li><%= link_to "Destinations", admin_destinations_path %></li>
            <li><%= link_to "Cards", admin_cards_path %></li>
            <li><%= link_to "Offers", admin_offers_path %></li>
            <li><%= link_to "Users", admin_accounts_path %></li>
            <li><%= link_to "My Account", edit_admin_registration_path %></li>
          <% elsif current_account.onboarded? %>
            <li class="dropdown
              <% if current_account.unseen_notifications_count.nonzero? %>
                unseen_notifications
              <% end %>"
            >
              <a
                href="#"
                class="dropdown-toggle"
                data-toggle="dropdown"
                role="button"
                aria-haspopup="true"
                aria-expanded="false"
              >
                Notifications
                <% if current_account.unseen_notifications_count.nonzero? %>
                  (<%= current_account.unseen_notifications_count %>)
                <% end %>
              <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <% present_each current_account.unseen_notifications do |notification| %>
                  <li
                    id="<%= dom_id(notification) %>"
                    class="<%= dom_class(notification) %>"
                  ><%= notification.link %></li>
                <% end %>
              </ul>
            </li>
            <li><%= link_to "Cards", card_accounts_path %></li>
            <li><%= link_to "Travel plans", travel_plans_path %></li>
          <% end %>
          <li>
            <p class="navbar-text">
              <%= (current_account || current_admin).email %>
            </p>
          </li>
          <li><%= link_to_sign_out %></li>
        <% else %>
          <li><%= link_to "Sign in", new_account_session_path %></li>
          <li><%= link_to "Sign up", new_account_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
