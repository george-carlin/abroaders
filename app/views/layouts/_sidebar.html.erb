<aside id="menu">
  <div id="navigation">
    <ul class="nav" id="side-menu">
      <% if current_account %>
        <%= sidebar_link_to "Dashboard", root_path %>
        <% if current_account.onboarded? %>
          <%= sidebar_link_to "Travel Plans", travel_plans_path, TravelPlansController%>

          <% if current_account.eligible? %>
            <%= sidebar_nested_links(
              "Cards",
              {
                "View all cards"    => card_accounts_path,
                "Add new card" => choose_card_card_accounts_path,
              },
              CardAccountsController,
            )%>
          <% else %>
            <%= sidebar_link_to(
              "Cards",
              card_accounts_path,
              CardAccountsController
            ) %>
          <% end %>

          <%= sidebar_link_to  "Balances", balances_path, BalancesController %>
        <% end %>
      <% elsif current_admin %>
        <%= sidebar_link_to(
          "Destinations",
          admin_destinations_path,
          AdminArea::DestinationsController
        ) %>
        <%= sidebar_link_to(
          "Cards",
          admin_cards_path,
          AdminArea::CardsController
        ) %>
        <%= sidebar_nested_links(
          "Offers",
          {
            "View all offers"    => admin_offers_path,
            "Review live offers" => review_admin_offers_path,
          },
          AdminArea::OffersController,
        )%>
        <%= sidebar_link_to "Users", admin_accounts_path, AdminArea::AccountsController %>
        <%= sidebar_link_to "My Account", edit_admin_registration_path %>
      <% end %>
    </ul>
  </div>
</aside>

