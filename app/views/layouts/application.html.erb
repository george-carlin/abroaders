<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body class="<%= "blank" unless sidebar? %> fixed-navbar fixed-sidebar">
    <%= render "layouts/header" %>
    <%= cell Abroaders::Cell::Sidebar, nil, current_user: current_user if sidebar? %>

    <div id="wrapper" class="wrapper <%= 'wrapper-with-sidebar' if sidebar? %>">
      <div class="content">
        <%= render "layouts/noscript" unless Rails.env.test? %>

        <%= flash_alerts %>
        <%= yield %>
      </div><!-- content -->
      <%= render "layouts/footer" %>
    </div>
    <%= render "shared/third_party_scripts" %>
  </body>
</html>
