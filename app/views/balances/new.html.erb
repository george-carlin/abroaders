<div class='hpanel'>
  <div class="panel-body">
    <h1>
      Add new Balance
      <% if current_account.couples? %>
        for <%= @form.model.person.first_name %>
      <% end %>
    </h1>

    <%= cell(Abroaders::Cell::ValidationErrorsAlert, @form) %>

    <%= form_for [@form.model.person, @form] do |f| %>

      <div class="form-group">
        <%= f.label :currency_id %>
        <%= f.collection_select :currency_id, Currency.all, :id, :name %>
      </div>

      <div class="form-group">
        <%= f.label        :value %>
        <%= f.number_field :value %>
      </div>

      <%= f.submit 'Save', class: "btn btn-primary" %>
      &nbsp;

      <%= link_to "Back", balances_path %>
    <% end %>
  </div>
</div>
