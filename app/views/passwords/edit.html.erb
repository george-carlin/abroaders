<% provide :title, "Update Password" %>

<%= bootstrap_devise_error_messages! %>

<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <h4>CHANGE YOUR PASSWORD</h4>
      </div>

      <div class="hpanel">
        <div class="panel-body">
          <%= form_for resource, url: accounts_password_path, method: :put, html: { role: "form" } do |f| %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, t('.new_password', :default => 'New password') %>
              <%= f.password_field :password, autofocus: true  %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password') %>
              <%= f.password_field :password_confirmation  %>
            </div>

            <%= f.submit t('.change_my_password', :default => 'Change my password'), class: "btn btn-success btn-block" %>
          <% end # form_for %>
          <br>
          <%= link_to  "Sign in", new_account_session_path %> |
          <%= link_to "Sign up", new_account_registration_path %>
        </div><!-- .panel-body -->
      </div><!-- .hpanel -->
    </div><!-- .col-md-12 -->
  </div><!-- .row -->

  <div class="row">
    <div class="col-md-12 text-center">
      <br/> Â© <%= Time.zone.today.year %> Abroaders
    </div>
  </div>
</div><!-- login-container -->
