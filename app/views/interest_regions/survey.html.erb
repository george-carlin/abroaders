<% provide :title, "Regions of Intereset" %>
<% provide :no_sidebar, true %>

<div class="hpanel interest-regions-survey">
  <div class="panel-heading hbuilt">
    <div class="row">
      <div class="col-xs-12 greeting-message">
        <h1>Interested in any of these locations?</h1>
        <h4>Select all the regions you would be interested in visiting. We'll save the regions to your profile and alert when there are great deals</h4>
      </div>
    </div><!-- .row -->
  </div>

  <div class="panel-body">
    <div class="col-xs-12 col-md-10 col-md-offset-1">

      <%= form_tag survey_interest_regions_path, html: { class: "text-center" } do |f| %>
        <div class="row">
          <div class="col-xs-12">
            <div class="row regions-row">
              <% @regions.each do |region| %>
                <div class="col-xs-12 col-sm-6 col-md-4 region-box">
                  <span class="region-name">
                    <%= region.name %>
                  </span>

                  <%= check_box(
                    :interest_regions_survey,
                    "region_ids][]",
                    value: region.id,
                    class: "region-checkbox"
                  ) %>

                  <div class="image-area">
                    <%= image_tag(region.image) %>
                  </div>
                </div>
              <% end %>
            </div>

            <button class="btn btn-lg btn-primary submit-button">
              <i class="fa fa-check" aria-hidden="true"></i>
              Save and continue
            </button>
          </div>
        </div>

      <% end %>
    </div>
  </div><!-- .panel-body -->

</div>
