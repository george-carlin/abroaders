<% provide :title, "Regions of Intereset" %>
<% provide :no_sidebar, true %>

<div class="hpanel interest-regions-survey">
  <div class="panel-heading hbuilt">
    <div class="row">
      <div class="col-xs-12 greeting-message">
        <h1>Interested in any of these locations?</h1>
        <h4>Select all the regions you would be interested in visiting. We'll save the regions to your profile and alert when there are great deals</h4>
      </div>
    </div><!-- .row -->
  </div>

  <div class="panel-body">
    <div class="col-xs-12 col-md-10 col-md-offset-1">

      <%= form_for @interest_regions.form_object, html: { class: "text-center" } do |f| %>
        <div class="row">
          <div class="col-xs-12">
            <div class="row regions-row">
              <% @regions.each do |region| %>
                <%= hidden_field_tag "interest_regions_survey[regions][][region_id]", region.id %>

                <div class="col-xs-12 col-sm-6 col-md-4 region-box">
                  <div class="label-area" data-toggle="buttons">
                    <%= f.label :regions_ids, class: "btn btn-default" do %>
                      <%= check_box_tag "interest_regions_survey[regions][][selected]", "1", false, id: "interest_regions_survey_#{region.id}_region_selected" %>
                      <span class="fa fa-check"></span>
                    <% end %>
                  </div>
                  <h1><%= region.name %></h1>

                  <div class="image-area">
                    <%= image_tag(region.image) %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="row">
              <div class="col-xs-12 col-md-6 col-md-offset-3">
                <%= f.button type: "submit", class: "form-control btn btn-lg btn-primary submit-button" do %>
                  <i class="fa fa-check" aria-hidden="true"></i>
                  Save and continue
                <% end %>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div><!-- .panel-body -->

</div>
