<% present @account do |account| %>
  <% provide :title, "Update Readiness" %>

  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="hpanel">
        <div class="panel-heading hbuilt">
          <h1><%= account.both_unready? ? "Are" : "Is" %> <%= account.name %> ready to apply for cards now?</h1>

          <p>
            <%= account.name.capitalize %> <%= account.both_unready? ? "have" : "has" %> not said that they are ready to apply for new cards.
          </p>

          <% if account.has_companion? %>

              <%= account.person_reason(account.owner) %>
              <%= account.person_reason(account.companion) %>

          <% else %>

              <%= account.person_reason(account.owner) %>

          <% end %>

          <p><%= t("readiness.explanation") %></p>

          <p>
            If <%= account.name %> <%= account.both_unready? ? "are" : "is" %> able to apply for the card within the
            next few days, click "I am now ready" below and we'll get working on the card
            recommendation immediately.
          </p>

        </div><!-- .panel-heading -->

        <div class="panel-body">
          <div class="row">
          <% if account.has_companion? %>
            <% if account.owner.unready? && account.companion.unready? %>

              <%= account.update_both_readiness_btn %>
              <%= account.update_owner_readiness_btn(prefix: "Only") %>
              <%= account.update_companion_readiness_btn(prefix: "Only") %>
              <div class="col-md-6 col-lg-3">
                <%= link_to "Cancel", root_path, class: "btn btn-lg btn-primary readiness-btn" %>
              </div>

            <% elsif account.owner.unready? %>

                <%= account.update_owner_readiness_btn %>

            <% elsif account.companion.unready? %>

                <%= account.update_companion_readiness_btn %>

            <% end %>
          <% else %>

              <%= account.update_self_readiness_btn %>

          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
