<% provide :title, "Select Account Type" %>

<div id="account_type_forms">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 account_type_select_header">
      <h1>How do you want to earn points?</h1>

      <p>
        Abroaders will help you earn the right points for
        your
        <% if @destination %>
          trip to <%= @destination.name %>.
        <% else %>
          next trip.
        <% end %>
      </p>
    </div>

    <% form_classes = 'account_type_form hpanel col-xs-12 col-sm-6 col-md-5 col-lg-4' %>

    <%= form_tag(
      type_account_path,
      class: "#{form_classes} col-md-offset-1 col-lg-offset-2",
    ) do %>
      <div class="panel-body">
        <%= hidden_field :account, :type, value: 'solo' %>

        <h2>
          <i class="fa fa-user"> </i>
          &nbsp;
          Solo Earning
        </h2>

        <p>
          Abroaders will help you maximize the points you earn with your
          regular monthly spending.
        </p>

        <button class="btn btn-primary">
          Sign up for solo earning
        </button>
      </div>
    <% end %>

    <%= form_tag(
      type_account_path,
      id: 'couples_account_form',
      class: form_classes,
    ) do %>
      <div class="panel-body">
        <%= hidden_field :account, :type, value: :couples %>
        <h2>
          <i class="fa fa-user"> </i>
          <i class="fa fa-user"> </i>
          &nbsp;
          Couples Earning
        </h2>

        <p>
          This option is ideal if you share monthly spending with a spouse or
          partner. Abroaders will help you maximize your points as a team.
        </p>

        <p>
          Couples earning only works if you pay your bills together. If you
          would prefer to keep your expenses separate and pay separately for
          your own monthly purchases, you should each create your own
          Abroaders account and choose "Solo Earning"
        </p>

        <div id="couples_account_form_error_msg" class="alert alert-danger" style="display:none;">
          Please enter a valid name
        </div>

        <div class="form-group">
          <%= text_field(
            :account,
            :companion_first_name,
            placeholder: "What's your partner's first name?",
          ) %>
        </div>

        <%= submit_tag 'Sign up for couples earning', class: 'btn btn-primary' %>
      </div><!-- .panel-body -->
    <% end %>
  </div>
</div>
