<div class="hpanel">
  <div class="panel-heading hbuilt">
    <h1><%= @person.first_name %> - Pulled card recommendations</h1>
    <p><%= @account.email %></p>
    <p><%= link_to "Back to this person's main page", admin_person_path(@person) %></p>
  </div>

  <div class="panel-body">
    <table id="admin_person_pulled_cards" class="table table-striped">
      <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Recommended</th>
        <th>Seen</th>
        <th>Clicked</th>
        <th>Denied</th>
        <th>Declined</th>
        <th>Pulled</th>
      </thead>
      <tbody>
        <% present_each @pulled_recommendations, AdminArea::CardPresenter do |card| %>
          <%= content_tag_for :tr, card do %>
            <td><%= AdminArea::CardProduct::Cell::Identifier.(card.model.product) %></td>
            <td><%= card.product_name %></td>
            <td class="card_recommended_at">
              <%= card.recommended_at || "-" %>
            </td>
            <td class="card_seen_at">
              <%= card.seen_at || "-" %>
            </td>
            <td class="card_clicked_at">
              <%= card.clicked_at || "-" %>
            </td>
            <td class="card_denied_at">
              <%= card.denied_at || "-" %>
            </td>
            <td class="card_declined_at">
              <%= card.declined_at || "-" %>
            </td>
            <td class="card_pulled_at">
              <%= card.pulled_at %>
            </td>
          <% end # content_tag_for %>
        <% end # present %>
      </tbody>
    </table>
  </div>
</div>
