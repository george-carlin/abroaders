<%= form_for [:admin, card] do |f| %>

  <p>All fields are required</p>

  <div class="form-group">
    <%= f.label      :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label  :network %>
    <%= f.select :network, options_for_card_network_select(f.object.network) %>
  </div>

  <div class="form-group">
    <%= f.label  :personal %>
    <%= f.check_box :personal %>
  </div>

  <div class="form-group">
    <%= f.label  :type %>
    <%= f.select :type, options_for_card_type_select(f.object.type) %>
  </div>

  <div class="form-group">
    <%= f.label  :currency_id %>
    <%= f.collection_select :currency_id, Currency.order("name ASC"), :id, :name, include_blank: "No currency" %>
  </div>

  <div class="form-group">
    <%= f.label :bank_id %>
    <%= f.collection_select :bank_id, Bank.alphabetical, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.label :annual_fee %>
    <div class="input-group">
      <div class="input-group-addon">
        $
      </div>
      <%= f.number_field :annual_fee %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :shown_on_survey, "Ask about this card on the onboarding survey?" %>
    <%= f.check_box :shown_on_survey %>
  </div>

  <%= f.submit "Save Card Product", class: "btn btn-primary" %>

  &nbsp;&nbsp;

  <% if f.object.persisted? %>
    <%= link_to "Cancel", admin_card_product_path(f.object) %>
    |
  <% end %>
  <%= link_to "Show all cards", admin_card_products_path %>

<% end %>
