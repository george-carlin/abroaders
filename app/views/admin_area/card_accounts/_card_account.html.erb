<% present card_account, AdminArea::CardAccountPresenter do |card_account| %>
  <%= card_account.tr_tag do %>
    <td><%= card_account.card_identifier %></td>
    <td><%= card_account.card_name %></td>
    <td class="card_account_status">
      <%= card_account.status %>
      <% if card_account.declined? %>
        <a href="#" data-toggle="tooltip" title="<%= card_account.decline_reason %>">
          <%= fa_icon "question" %>
        </a>
      <% end %>
    </td>
    <td class="card_account_recommended_at" data-text="<%= card_account.recommended_at_value %>">
      <%= card_account.recommended_at || "-" %>
    </td>
    <td class="card_account_seen_at">
      <%= card_account.seen_at || "-" %>
    </td>
    <td class="card_account_clicked_at">
      <%= card_account.clicked_at || "-" %>
    </td>
    <td class="card_account_applied_at" data-text="<%= card_account.applied_at_value %>">
      <%= card_account.applied_at || "-" %>
    </td>
    <td class="card_account_denied_at">
      <%= card_account.denied_at || "-" %>
    </td>
    <td class="card_account_declined_at">
      <%= card_account.declined_at || "-" %>
    </td>
    <td class="card_account_opened_at" data-text="<%= card_account.opened_at_value %>">
      <%= card_account.opened_at || "-" %>
    </td>
    <td class="card_account_closed_at" data-text="<%= card_account.closed_at_value %>">
      <%= card_account.closed_at || "-" %>
    </td>
    <td>
      <%= card_account.link_to_pull if card_account.recommendation? %>
    </td>
  <% end # content_tag_for %>
<% end # present %>
