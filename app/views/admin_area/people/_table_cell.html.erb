<%= link_to(person.first_name, admin_person_path(person)) %>

<% if person.can_receive_recommendations? %>
  <%= link_to(
    new_admin_person_card_recommendation_path(person),
    class: "admin_person_recommend_card_link",
    title: "Recommend a card to this user"
  ) do %>
    <i class="fa fa-credit-card-alt " style="margin-left: 5px"></i>
    <i class="fa fa-plus"></i>
  <% end %>
<% end %>

