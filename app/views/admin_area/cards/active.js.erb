var cardId = <%= @card.id %>,
    active = <%= @card.active %>;
    formId = "#toggle_active_card_" + cardId,
    $text = $(formId + " .active-status"),
    $checkbox = $(formId + " input[type='checkbox']");

$checkbox.prop("disabled", false);

if (active) {
  $text.text("Active");
} else {
  $text.text("Inactive");
}

// We need to make sure that checkbox.checked is in the correct state, because
// the user didn't necessarily click the checkbox (e.g. they may have toggled
// the status by clicking the 'Active/Inactive' text)
$checkbox.prop("checked", active);
