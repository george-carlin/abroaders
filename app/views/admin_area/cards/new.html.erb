<% provide :title, "New Card" %>

<h1>New Card</h1>

<%= render "shared/model_validation_errors", model: @card %>

<%= form_for [:admin, @card] do |f| %>

  <div class="form-group">
    <%= f.label      :identifier %>
    <%= f.text_field :identifier %>
  </div>

  <div class="form-group">
    <%= f.label      :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label  :brand %>
    <%= f.select :brand, options_for_enum_select(Card.brands), {} %>
  </div>

  <div class="form-group">
    <%= f.label  :bp %>
    <%= f.select :bp, options_for_enum_select(Card.bps), {} %>
  </div>

  <div class="form-group">
    <%= f.label  :type %>
    <%= f.select :type, options_for_enum_select(Card.types), {} %>
  </div>

  <div class="form-group">
    <%= f.label      :annual_fee %>
    <div class="input-group">
      <div class="input-group-addon">
        $
      </div>
      <%= f.text_field :annual_fee %>
    </div>
  </div>

  <%= f.submit "Save Card", class: "btn btn-primary" %>

  &nbsp;&nbsp;

  <%= link_to "Cancel", admin_cards_path %>

<% end %>
