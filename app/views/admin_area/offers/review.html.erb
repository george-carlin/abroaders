<% provide :title, "Review Live Offers" %>

<% content_for :header_panel do %>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-10">
        <h1>Review Live Offers</h1>
      </div>

      <div class="col-md-2" style="margin-top:6px;">
        <%= update_offers_last_reviewed_at_btn %>
      </div>
    </div><!-- .row -->
  </div>
<% end %>

<%= render "shared/hpanel" do %>
  <div class="panel-body">
    <div class="table-responsive">
      <table
        class="table table-striped"
        cellpadding="1"
        cellspacing="1"
      >
        <thead>
          <tr>
            <th>Card</th>
            <th>Bank</th>
            <th>B/P</th>
            <th>Points</th>
            <th>Spend</th>
            <th>Cost</th>
            <th>Days</th>
            <th>Last Reviewed</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% present_each @offers, AdminArea::OfferPresenter do |offer| %>
            <%= content_tag_for :tr, offer do %>
              <td><%= offer.card_name %></td>
              <td><%= offer.bank_name %></td>
              <td><%= offer.card.bp %></td>
              <td><%= offer.points_awarded %></td>
              <td><%= offer.spend %></td>
              <td><%= offer.cost %></td>
              <td><%= offer.days %></td>
              <td><%= offer.last_reviewed_at %></td>
              <td><%= offer.link_to_show_for_offer %></td>
              <td><%= offer.kill_btn %></td>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
