<% provide :title, "Review Live Offers" %>

<% content_for :header_panel do %>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-10">
        <h1>Review Live Offers</h1>
      </div>
    </div><!-- .row -->
  </div>
<% end %>

<%= render "shared/hpanel" do %>
  <div class="panel-body">
    <div class="table-responsive">
      <table
        class="admin_review_offers table table-striped"
        cellpadding="1"
        cellspacing="1"
      >
        <thead>
          <tr>
            <th>Card</th>
            <th>Bank</th>
            <th>B/P</th>
            <th>Points</th>
            <th>Spend</th>
            <th>Cost</th>
            <th>Days</th>
            <th>Reviewed</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% present_each @offers, AdminArea::OfferPresenter do |offer| %>
            <%= content_tag_for :tr, offer do %>
              <td class="offer_card_name">
                <%= offer.card_name %>
              </td>
              <td><%= offer.bank_name %></td>
              <td><%= offer.card_bp %></td>
              <td><%= offer.points_awarded %></td>
              <td><%= offer.spend %></td>
              <td><%= offer.cost %></td>
              <td><%= offer.days %></td>
              <td id="reviewed_<%= offer.id %>"><%= offer.last_reviewed_at %></td>
              <td><%= offer.link_to_show_for_offer %></td>
              <td><%= offer.link_to_edit %></td>
              <td>
                <div class="btn-group">
                  <%= offer.verify_btn %>
                  <%= offer.kill_btn %>
                </div>
              </td>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
