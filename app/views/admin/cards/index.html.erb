<% provide :title, "Cards" %>

<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<%= link_to "Add New Card", new_admin_card_path %>

<table id="admin_cards_table" class="table table-striped">
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Name</th>
      <th>Currency</th>
      <th>Brand</th>
      <th>B/P</th>
      <th>Type</th>
      <th>Annual Fee</th>
      <th class="is-active"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr id="<%= dom_id(card) %>">
        <td><%= card.identifier %></td>
        <td><%= card.name %></td>
        <td><%= card.currency.short_name %></td>
        <td><%= card.brand.capitalize %></td>
        <td><%= card.bp.capitalize %></td>
        <td><%= card.type.capitalize %></td>
        <td><%= card_price_formatted(card) %></td>
        <td class="is-active">
          <%= form_for card,
                    remote: true, url: active_admin_card_path(card),
                    method: :put,
                    html: {
                      class: "toggle_active_card",
                      id: dom_id(card, :toggle_active)
                    } do |f| %>
            <%= f.check_box :active %>
            &nbsp;
            <span class="active-status">
              <%= card.active ? "Active" : "Inactive" %>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
