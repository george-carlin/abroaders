<% provide :title, "Airports" %>

<h1>Airports</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>IATA code</th>
    </tr>
  </thead>

  <tbody>
    <% @airports.each do |airport| %>
      <tr>
        <td><%= airport.name %></td>
        <td><%= airport.iata_code %></td>
      </tr>
    <% end %>
  </tbody>
</table>
