<%= present_div card_account, class: "row" do |card_account| %>
  <div class="col-xs-12 col-sm-6 col-md-2">
    <%= card_account.card.image("130x81") %>
  </div>

  <div class="col-xs-12 col-sm-6 col-md-6">
    <p>
      <b>Card Name:</b>
      <span class="card-account-card-name">
        <%= card_account.card.name %>
        (<%= card_account.card.network %>)
      </span>
    </p>

    <p>
      <b>Bank:</b>
      <span class="card-account-bank">
        <%= card_account.card.bank_name %>
      </span>
    </p>

    <% if card_account.offer.present? %>
      <div class="card_account_offer">
        <%= card_account.offer.description %>
      </div><!-- .card-account-offer -->
    <% end %>
  </div>

  <div class="col-xs-12 col-md-4">
    <% if card_account.recommended_at? %>
      <p><b>Recommended:</b> <%= card_account.recommended_at %></p>
    <% end %>
    <% if card_account.applied_at? %>
      <p><b>Applied:</b> <%= card_account.applied_at %></p>
    <% end %>
    <% if card_account.denied_at? %>
      <p><b>Denied:</b> <%= card_account.denied_at %></p>
    <% end %>
    <% if card_account.opened_at? %>
      <p><b>Opened:</b> <%= card_account.opened_at %></p>
    <% end %>
    <% if card_account.closed_at? %>
      <p><b>Closed:</b> <%= card_account.closed_at %></p>
    <% end %>
  </div>

  <div class="col-xs-12">
    <% if card_account.applyable? %>
      <br>
      <div
        data-react-component="CardAccountApplyOrDecline"
        data-apply-path="<%= apply_card_recommendation_path(card_account) %>"
        data-decline-path="<%= decline_card_recommendation_path(card_account) %>"
      ></div>
    <% end %>

    <% if card_account.show_survey? %>
      <br>
      <div
        data-react-component="CardApplicationSurvey"
        data-update-path="<%= card_recommendation_path(card_account) %>"
        <%#  TODO: automatically camelize attributes before passing them in to the React Componeny %>
        data-card-account="<%= card_account.attributes.to_json %>"
      ></div>
    <% end %>
  </div>
<% end # div_for %>

<hr>
