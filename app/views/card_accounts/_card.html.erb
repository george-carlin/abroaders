<% present card_account.card do |card| %>
  <div class="col-xs-6 col-md-2">
    <%= card.image("130x81") %>
  </div>

  <div class="col-xs-6 col-md-6">
    <p>
      <b>Card Name:</b>
      <span class="card-account-card-name">
        <%= card.name %>
        (<%= card.network %>)
      </span>
    </p>

    <p>
      <b>Bank:</b>
      <span class="card-account-bank">
        <%= card.bank_name %>
      </span>
    </p>

    <% if card_account.offer.present? %>
      <% present card_account.offer do |offer| %>
        <div class="card_account_offer">
          <%= offer.description %>
        </div><!-- .card-account-offer -->
      <% end %>
    <% end %>
  </div>
<% end %>

