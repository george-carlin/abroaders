<%= render "card_accounts/card_account", card_account: recommended_card_account do %>
  <%= render "card_accounts/recommendation_actions", card_account: recommended_card_account %>

  <% if false %>
    <% if recommended_card_account.declinable? %>
      <%= card_account_decline_btn(recommended_card_account) %>
    <% elsif recommended_card_account.declined? %>
      <% if recommended_card_account.declined_at.present? %>
        You indicated on <%= recommended_card_account.declined_at.strftime("%D") %>
        that you do not wish to apply for this card.
      <% else %>
        You declined to apply for this card
      <% end %>
    <% end %>

    <div
      id="card_account_<%= recommended_card_account.id %>_application_result_btns"
      style="display:none;"
    >
      <% if recommended_card_account.acceptable? %>
        <%= card_account_accepted_btn(recommended_card_account) %>
      <% end %>
      <% if recommended_card_account.deniable? %>
        <%= card_account_deny_btn(recommended_card_account) %>
      <% end %>
      <%= card_account_pending_btn(recommended_card_account) %>
      <%= card_account_applied_back_btn(recommended_card_account) %>
    </div>

    <div
      id="<%= dom_id(recommended_card_account) %>_pending_notification"
      style="display:none;"
    >
      <%= t("card_accounts.index.application_pending") %>
    </div>
  <% end %>
<% end %>
