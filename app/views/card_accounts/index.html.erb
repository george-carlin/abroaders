<% provide :title, "My Cards" %>

<h1>Your Cards</h1>

<% if @recommended_card_accounts.any? %>

  <h2>Card Recommendations</h2>

  <div id="recommended_card_accounts">
    <%= render @recommended_card_accounts %>
  </div><!-- #recommended_card_accounts -->
<% else %>
  Thanks for signing up to Abroaders! You will shortly receive your
  first card recommendation
<% end %>

<% if @other_card_accounts.any? %>
  <!-- ??? <h2>Other Cards</h2> -->

  <!-- this is really just a placeholder for now until we've got a system
  set up that handles cards of every status -->
  <div id="other_card_accounts">
    <%= render @other_card_accounts, partial: "card_accounts/card_account" %>
  </div><!-- #other_card_accounts -->
<% end %>

<% if @unknown_card_accounts.any? %>
  <h2>Other Cards</h2>

  <div id="unknown_card_accounts">
    <%= render @unknown_card_accounts %>
  </div>
<% end %>
