<div id="<%= html_id %>" class="<%= html_class %>">
  <div>
    <span class="travel_plan_type"><%= type %></span>

    &nbsp;&nbsp;&nbsp;&nbsp;

    <%= no_of_passengers %>

    <% if false %>
    <%# editing travel plans is temp disabled %>
    <% if local_assigns[:show_links] %>
      &nbsp;
      <%= link_to "Edit", edit_travel_plan_path(travel_plan) %>
    <% end %>

    <% if local_assigns[:show_admin_links] %>
        &nbsp;
        <%= link_to "Edit", edit_admin_travel_plan_path(travel_plan) %>
    <% end %>
    <% end %>
  </div>

  <%= dates %>

  <% travel_plan.flights.each do |flight| %>
    <%= cell(Flight::Cell::Summary, flight) %>
  <% end %>

  <div><%= further_information %></div>
  <div>Acceptable classes: <b><%= acceptable_classes %></b></div>
</div>
