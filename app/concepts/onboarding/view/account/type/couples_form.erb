<%= form_tag do %>
  <div class="panel-body">
    <%= hidden_field :account, :type, value: :couples %>

    <h2>
      <i class="fa fa-user"> </i>
      <i class="fa fa-user"> </i>
      &nbsp;
      Couples Account
    </h3>

    <p class="text-left"><span class="fa fa-check"></span> You have a partner/spouse you travel with</p>

    <p class="text-left"><span class="fa fa-check"></span> You generally share expenses together</p>

    <div id="couples_account_form_error_msg" class="alert alert-danger" style="display:none;">
      Please enter a valid name
    </div>

    <div class="form-group">
      <%= text_field(
        :account,
        :companion_first_name,
        placeholder: "What's your partner's first name?",
      ) %>
    </div>

    <%= submit_tag 'Select couples account', class: 'btn btn-primary' %>
  </div><!-- .panel-body -->
<% end %>
