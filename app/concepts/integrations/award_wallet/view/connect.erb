<div class='hpanel award-wallet-connect'>
  <div class='panel-heading hbuilt text-center'>
    <h1>Connect Your Account to AwardWallet</h1>
  </div>

  <div class='panel-body'>
    <div class='row'>
      <div class="col-xs-12 col-md-6">

        <h3><strong>If you already have an account</strong></h3>

        <p class="lead text-left">
          <span class="list-item"><strong>1.</strong></span>
          Click the "connect with AwardWallet" button below
        </p>
        <p class="lead text-left">
          <span class="list-item"><strong>2.</strong></span>
          Login to AwardWallet
        </p>

        <p class="lead text-left">
          <span class="list-item"><strong>3.</strong></span>
          Click the "share all accounts" button
        </p>

        <p class="lead text-left">
          <span class="list-item"><strong>4.</strong></span>
          Finished
        </p>
      </div>

      <div class="col-xs-12 col-md-6">
        <h3><strong>If you don't have an account</strong></h3>

        <p class="lead text-left">
          <span class="list-item"><strong>1.</strong></span>
          Click the "connect with AwardWallet" button below
        </p>

        <p class="lead text-left">
          <span class="list-item"><strong>2.</strong></span>
          Register with AwardWallet
        </p>

        <% if false %>
          <%= image_tag 'aw-explain.png' %>
        <% end %>

        <p class="lead text-left">
          <span class="list-item"><strong>3.</strong></span>
          Click the "share all accounts" button
        </p>

        <p class="lead text-left">
          <span class="list-item"><strong>4.</strong></span>
          Finished
        </p>
      </div>

      <div class="col-xs-12 text-center">
        <hr />

        <p><%= link_to_award_wallet %></p>
      </div>
    </div>
  </div>
</div>
