<div id="person_<%= id %>" class="person hpanel col-xs-12 col-md-6">
  <div class="panel-body">
    <h3><%= first_name %></h3>

    <% if eligible? %>
      <p>Eligible to apply for cards</p>

      <hr>

      <h4>
        General Info
        <small><%= link_to_edit_spending %></small>
      </h4>

      <%= spending_info %>
      <div class="clearfix"></div>
    <% else %>
      <p>Ineligible to apply for cards</p>
    <% end %>

    <hr>

    <%= balances %>

    <% if model.ready? %>
      <hr>
      <p>
        <%= first_name %> is ready to apply for cards and will shortly
        receive recommendations from the Abroaders team.
      </p>
    <% else %>
      <% unless model.has_recent_recommendation? %>
        <hr>
        <p><%= first_name %> is not ready to apply for cards.</p>

        <% if model.unreadiness_reason.present? %>
          <p>Reason given: <i><%= model.unreadiness_reason %></i></p>
        <% end %>
      <% end %>

      <% if eligible? %>
        <p>
          <%= link_to "Click here when you're ready", edit_readiness_path %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>
