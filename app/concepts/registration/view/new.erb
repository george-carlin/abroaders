<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <h4>SIGN UP</h4>
      </div>

      <div class="hpanel">
        <%= errors %>

        <div class="panel-body">
          <%= link_to_sign_up_with_facebook %>

          <br>

          <p class='lead text-center'>Or</p>

          <%= form_tag do |f| %>
            <div class="form-group required-abr">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
            </div>

            <div class="form-group required-abr">
              <%= f.text_field :first_name, placeholder: 'First name' %>
            </div>

            <div class="form-group required-abr">
              <%= f.password_field :password, placeholder: 'Password (Minimum Length 8 Characters)' %>
            </div>

            <div class="form-group required-abr">
              <%= f.password_field :password_confirmation, placeholder: 'Confirm password' %>
            </div>

            <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
          <% end %>

          <br>
          <%= link_to "Sign in", new_account_session_path %>
          |
          <%= link_to "Forgot your password?", new_account_password_path %>
        </div><!-- .panel-body -->
      </div><!-- .hpanel -->
    </div><!-- .text-center -->
  </div>
</div>
