<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <h4>SIGN UP</h4>
      </div>

      <div class="hpanel">
        <%= errors %>

        <div class="panel-body">
          <%= link_to_sign_up_with_facebook %>

          <br>
          <p>Fields with a * are required</p>

          <%= form_tag do |f| %>
            <div class="form-group required-abr">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true %>
            </div>

            <div class="form-group required-abr">
              <%= f.label :first_name %>
              <%= f.text_field :first_name %>
            </div>

            <div class="form-group required-abr">
              <%= f.label :password %>
              <p class="help-block">
                Minimum length <%= minimum_password_length %> characters
              </p>
              <%= f.password_field :password %>
            </div>

            <div class="form-group required-abr">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation %>
            </div>

            <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
          <% end %>

          <br>
          <%= link_to "Sign in", new_account_session_path %>
          |
          <%= link_to "Forgot your password?", new_account_password_path %>
        </div><!-- .panel-body -->
      </div><!-- .hpanel -->
    </div><!-- .text-center -->
  </div>
</div>
