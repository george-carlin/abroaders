<div class="hpanel">
  <div class="panel-heading hbuilt">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= title %></h1>
      </div>
    </div><!-- .row -->
  </div>

  <%= errors %>

  <div class="panel-body">
    <%= form_tag do |f| %>
      <div class="row">
        <% if model.new_record? %>
          <div class="col-md-12 col-lg-3">
            <label class="card-info-label">Product:</label>
          </div>

          <div class="col-md-12 col-lg-9">
            <%= f.select :card_product_id, AdminArea::CardProducts::OptionTags.().() %>
          </div>
        <% end %>

        <div class="col-md-12 col-lg-3">
          <label class="card-info-label">Opened:</label>
        </div>

        <div class="col-md-12 col-lg-9">
          <%= f.date_select(
            :opened_on,
            end_year:   Date.today.year,
            order:      [:month, :year],
            start_year: Date.today.year - 10,
            use_short_month: true,
            discard_day: true,
          ) %>
        </div>

        <div class="col-md-12 col-lg-3">
          <%= f.label :closed, class: 'card-info-label' do %>
            Closed?
          <% end %>
        </div>

        <div class="col-md-12 col-lg-9">
          <%= f.check_box :closed, class: "cards_survey_card_closed input-lg" %>
        </div>

        <div class="card-survey-closed <%= 'hide' unless form.closed %>">
          <div class="col-md-12 col-lg-3">
            <label class="card-info-label card-survey-closed">Closed:</label>
          </div>

          <div class="col-md-12 col-lg-9">
            <%= f.date_select(
                :closed_on,
                end_year: Date.today.year,
                order: [:month, :year],
                start_year: Date.today.year - 10,
                use_short_month: true,
                discard_day: true,
                class: "cards_survey_select"
            ) %>
          </div>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-xs-12">
          <%= f.submit 'Save', class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

