<div class="hpanel">
  <div class="panel-heading hbuilt">
    <h1><%= title %></h1>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12">
        <%= form_tag do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <%= f.label :type %>
            <%= f.select :type, options_for_select(Currency::Type.values) %>
          </div>

          <div class="form-group">
            <%= f.label :alliance_name, 'Alliance' %>
            <%= f.select :alliance_name, options_for_select(Alliance::Name.values) %>
          </div>

          <%= f.submit 'Save', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
