<div class="hpanel">
  <div class="panel-heading hbuilt">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= title %></h1>
      </div>
    </div>
  </div>

  <div class="panel-body">
    <div class="row">
      <%= card_product_summary %>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-12">
        <%= link_to_edit %>

        <dl class="dl-horizontal">
          <dt>Condition:</dt>
          <dd><%= condition %></dd>

          <dt>Partner:</dt>
          <dd><%= partner_name %></dd>

          <dt>Points awarded:</dt>
          <dd><%= points_awarded %></dd>

          <%= spend %>

          <dt>Cost:</dt>
          <dd><%= cost %></dd>

          <%= days %>

          <dt>Link:</dt>
          <dd><%= link_to_link %></dd>

          <dt>Notes:</dt>
          <dd><%= notes %></dd>

          <dt>Value:</dt>
          <dd><%= value %></dd>
        </dl>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-12 col-xl-6">
        <%= alternatives_table %>

        <hr class="hidden-xl">
      </div>

      <div class="col-xs-12 col-xl-6">
        <%= active_recs_table %>
      </div>
    </div>
  </div>
</div>
