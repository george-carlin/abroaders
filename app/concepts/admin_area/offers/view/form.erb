<%= form_tag do |f| %>
  <%= errors %>

  <div class="form-group">
    <%= f.label :condition, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :condition, options_for_offer_condition_select(f.object) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :partner, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :partner, options_for_offer_partner_select(f.object) %>
    </div>
  </div>

  <div
    id="offer_points_awarded_form_group"
    class="form-group"
    style="<%= "display:none" if !Offer::Condition.points_awarded?(f.object.condition) %>"
  >
    <%= f.label :points_awarded, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :points_awarded, class: "form-control" %>
    </div>
  </div>

  <div
    id="offer_spend_form_group"
    class="form-group"
    style="<%= "display:none" if !Offer::Condition.spend?(f.object.condition) %>"
  >
    <%= f.label :spend, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :spend, class: "form-control" %>
    </div>
  </div>

  <div id="offer_cost_form_group" class="form-group">
    <%= f.label :cost, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cost, class: "form-control" %>
    </div>
  </div>

  <div
    id="offer_days_form_group"
    class="form-group"
    style="<%= "display:none" if !Offer::Condition.days?(f.object.condition) %>"
  >
    <%= f.label :days, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :days, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :link, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :link, class: "form-control",
        placeholder: 'Make sure you include the "http://" or "https://"' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :notes, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :notes, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit t("admin.offers.submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<% if model.dead? %>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_to_unkill %>
    </div>
  </div>
<% end %>
