<div class="hpanel admin_area_people_show">
  <%= heading %>

  <div class="panel-body">
    <% if account_unresolved_recommendation_requests? %>
      <div class="col-xs-12">
        <% if unresolved_recommendation_request? %>
          <p><%= first_name %> requested a recommendation at
            <%= unresolved_recommendation_request.created_at.strftime('%c') %></p>
        <% end %>

        <% if partner_unresolved_recommendation_request? %>
          <p><%= partner_first_name %> requested a recommendation at
          <%= partner_unresolved_recommendation_request.created_at.strftime('%c') %></p>
        <% end %>
      </div>
    <% end %>

    <div class="col-xs-12 col-md-6">
      <%= spending_info %>
    </div>

    <div class="col-xs-12 col-md-6">
      <%= spending_info %>
    </div>

    <div class="col-xs-12 col-md-6">
      <%= award_wallet_connection %>

      <%= balances_list %>

      <%= award_wallet_email %>
    </div><!-- .col-xs-12.col-md-6 -->

    <div class="col-xs-12 col-md-6">
      <%= travel_plans_list %>
    </div><!-- .col-xs-12.col-md-6 -->

    <div class="col-xs-12 col-md-6">
      <%= regions_of_interest_list %>

      <%= home_airports_list %>
    </div><!-- .col-xs-12.col-md-6 -->

    <div id="card-recommendation-filters" class="col-xs-12">
      <hr />

      <div class="row">
        <div class="col-xs-12">
          <div class="form-inline">
            <b>B/P: </b>&nbsp;
            <% CardProduct.bps.keys.each do |bp| %>
              <%= card_bp_filter_check_box_tag(bp) %>
            <% end %>
          </div>
        </div>
      </div><!-- .row -->

      <div class="row">
        <%= bank_filter_panels %>

        <%= currency_filter_panels %>
      </div><!-- .row -->
    </div><!-- #card-recommendation-filters.col-xs-12 -->

    <div class='col-xs-12'>
      <hr>

      <h3>Cards</h3>

      <%= card_accounts %>

      <%= card_recommendations %>
    </div>

    <div class='col-xs-12'>
      <%= recommendation_notes %>
    </div>

    <div class="col-xs-12">
      <%= form_tag(
        complete_admin_person_card_recommendations_path(model),
        id: 'complete_card_recommendations'
      ) do %>
        <%= text_area_tag(
          :recommendation_note, "",
          class: "form-control",
          rows: 15,
          placeholder: 'Recommendation notes (optional)',
        ) %>

        <p class="help-block">
          When you're finished recommending cards to this user, click
          'Done' to send them a notification. Optionally add some notes
          above which the user will see with their recommendations.

          Recommendations and notes are per account, not per person.  If
          an account has a companion, only click 'Done' (on either
          person's page) once you've finished making recommendations
          for both the account owner and the companion.
        </p>

        <input class="btn btn-primary btn-lg" style="float:right;" type="submit" value="Done">
      <% end # form_tag %>
    </div><!-- .col-xs-12 -->

    <div class="col-xs-12">
      <hr/>

      <%= recommendable_offers %>
    </div><!-- .col-xs-12 -->
  </div><!-- .panel-body -->
</div><!-- .hpanel -->
