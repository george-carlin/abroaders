<h4>Accounts <small><%= link_to_add_new %></small></h4>

<% if card_accounts.any? %>
  <div id='admin_person_card_accounts'>
    <%= table_tag do %>
      <thead>
        <th>Prod. ID</th>
        <th>Name</th>
        <th class="sortable-column opened sorted-column">Opened</th>
        <th class="sortable-column closed">Closed</th>
        <th></th>
      </thead>
      <tbody>
        <%= table_rows %>
      </tbody>
    <% end %>
  </div>
<% else %>
  <p id="admin_person_card_accounts_none">No card accounts</p>
<% end %>
