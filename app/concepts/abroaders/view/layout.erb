<!DOCTYPE html>
<html>
  <%= head %>
  <body class="<%= "blank" unless sidebar? %> fixed-navbar fixed-sidebar">
    <%= navbar %>
    <%= sidebar %>

    <div id="wrapper" class="wrapper <%= 'wrapper-with-sidebar' if sidebar? %>">
      <div class="content">
        <%= cell(Abroaders::Cell::Noscript) %>

        <%= flash_alerts %>

        <%= cell(RecommendationRequest::Cell::Banner, current_account) if current_account %>

        <%= yield %>
      </div><!-- content -->
      <%= cell Abroaders::Cell::Footer %>
    </div>
    <%= render "shared/third_party_scripts" %>
  </body>
</html>
